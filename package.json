{
  "name": "liminal-umbrella-start-bot",
  "version": "0.1.0",
  "bin": {
    "liminal-umbrella-start-bot": "dist/app.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "src/app.ts",
      "src/configs",
      "src/tools",
      "src/functions/constants"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src/*/*.ts",
    "fix-lint": "eslint src/*/*.ts --fix",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all --outputs-file dist/configs/outputs.json",
    "config": "node dist/tools/configure-discord-server.js setup",
    "reset": "node dist/tools/configure-discord-server.js reset"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/jest": "^29.5.11",
    "@types/node": "20.11.14",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "aws-cdk": "2.127.0",
    "aws-lambda": "^1.0.6",
    "esbuild": "^0.8.53",
    "eslint": "^7.21.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.518.0",
    "@aws-sdk/client-secrets-manager": "^3.515.0",
    "aws-cdk-lib": "2.127.0",
    "axios": "^0.21.4",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "tweetnacl": "^0.14.5"
  }
}
